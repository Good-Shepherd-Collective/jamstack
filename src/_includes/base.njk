<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" defer></script>

    <title>{{ title }}</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  

    {% include 'header.njk' %}
    <main>
        {{ content | safe }}
    </main>
    {% include 'footer.njk' %}
    </div>
    
    <script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", user => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }

  const primaryNav = document.querySelector(".primary-navigation");
  const navToggle = document.querySelector(".mobile-nav-toggle");

  navToggle.addEventListener("click", () => {
    const visibility = primaryNav.getAttribute("data-visible");
    
    if(visibility === "false"){
      primaryNav.setAttribute("data-visible", "true");
      navToggle.setAttribute("aria-expanded", "true");
    } else if (visibility === "true"){
      primaryNav.setAttribute("data-visible", "false");
      navToggle.setAttribute("aria-expanded", "false");
    }

    console.log(visibility);
  });



</script>

</body>
</html>

<style>

  
  
  button{
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    margin: 0;
  }

  .sr-only{
  position: absolute; 
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px; 
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap; /* added line */
  border: 0;
  }
  .primary-navigation{
    padding: 0;
    margin: 0;
  }

  

  .mobile-nav-toggle{
    display: none;
  }

  @media (max-width: 35em) {
    .primary-navigation{
      z-index: 1000;
      position: fixed;
      inset: 0 0 0 10%;
      flex-direction: column;
      padding: min(30vh, 10rem) 2em;
      background-color: hsl(0 0% 100% / 0.75);
      backdrop-filter: blur(10px);
      
      font-weight: 700;
      transform: translateX(100%);
    }

    .primary-navigation[data-visible="true"]{
    transform: translateX(0%);
  }

     .mobile-nav-toggle{
    display: block;
    position: absolute;
    background: url(https://res.cloudinary.com/abualex/image/upload/v1677176428/Hamburger_icon.svg) no-repeat center center;
    background-size: cover;
    width: 1rem;
    aspect-ratio: 1;
    top: 2rem;
    right: 2rem;
    z-index: 9999;
  }

  .mobile-nav-toggle[aria-expanded="true"]{
    background: url(https://res.cloudinary.com/abualex/image/upload/v1677176693/icons8-macos-close-30.png) no-repeat center center;
    background-size: cover;
    }

    .primary-navigation a:hover{
      text-decoration: dotted underline;
      text-decoration-thickness: .5px;
      text-underline-offset: 5px;
    }
    
   

    @supports (backdrop-filter: blur(10px)) {
    .primary-navigation{
      background-color: hsl(0 0% 100% / 0.5);
      backdrop-filter: blur(10px);
    }
  }
  }

  

  .logo{
    box-shadow: none;
  }
</style>