<script>


document.addEventListener("DOMContentLoaded", playOnHover);

function playOnHover() {
  var videos = document.getElementsByTagName('video');
  
  for (var i = 0; i < videos.length; i++) {
    videos[i].addEventListener('touchstart', function() {
      this.play();
    }, { passive: true });
    videos[i].addEventListener('touchend', function() {
      this.pause();
    }, { passive: true });
    videos[i].addEventListener('mouseover', function() {
      this.play();
    }, { passive: true });
    videos[i].addEventListener('mouseout', function() {
      this.pause();
    }, { passive: true });
  }
}

function animateVideoText(){
  const videoText = document.getElementsByClassName('hiddenText');
  for (var i = 0; i < videoText.length; i++){
    videoText[i].addEventListener('touchstart', function() {
      videoText.classList.replace('hiddenText', 'showText');
});
videoText[i].addEventListener('touchend', function() {

  videoText.classList.replace('hiddenText', 'showText');
});
videoText[i].addEventListener('mouseover', function() {
  videoText.classList.replace('hiddenText', 'showText');
});
videoText[i].addEventListener('mouseout', function() {

  videoText.classList.replace('hiddenText', 'showText');
});  

  }

}

